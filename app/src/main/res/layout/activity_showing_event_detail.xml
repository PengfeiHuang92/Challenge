<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/showDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    tools:context=".ShowingEventDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <include
            android:id="@+id/toolBar"
            layout="@layout/toolbar" />

        <ImageView
            android:id="@+id/imgEventPost"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="55dp" />

        <TextView
            android:id="@+id/tv_eventTittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/eventDetail_marginLeft"
            android:text="TextView"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_eventTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/eventDetail_marginLeft"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_eventDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/eventDetail_marginLeft"
            android:layout_marginTop="@dimen/eventDetail_marginTop"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/eventDetail_marginLeft"
                android:layout_weight="1"
                app:srcCompat="@drawable/location" />

            <TextView
                android:id="@+id/tv_eventLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="@android:color/holo_blue_dark" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/eventDetail_marginLeft"
            android:layout_marginTop="@dimen/eventDetail_marginTop"
            android:text="Speaker"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tv_eventSpeaker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/eventDetail_marginLeft"
            android:text="TextView" />
    </LinearLayout>
</ScrollView>